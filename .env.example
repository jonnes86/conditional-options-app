# Shopify App Credentials (get from your Shopify Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# Your app URL (Railway will provide this after first deployment)
SHOPIFY_APP_URL=https://your-app.railway.app

# Scopes your app needs
SCOPES=write_products,read_products,write_metaobjects,read_metaobjects

# Database URL (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Custom shop domain for development
# SHOP_CUSTOM_DOMAIN=your-store.myshopify.com
